<Window x:Class="Практика_7_Задания.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практика_7_Задания"
        mc:Ignorable="d"
        Title="Main Menu" WindowStartupLocation="CenterScreen" Height="400" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical" Background="Aqua">
        <Button x:Name="Zad1" Content="Задание 1" Click="Zad1_Click"/>
        <Button x:Name="Zad2" Content="Задание 2" Click="Zad2_Click"/>
        <Button x:Name="Zad3" Content="Задание 3" Click="Zad3_Click"/>
        <Button x:Name="Zad4" Content="Задание 4" Click="Zad4_Click"/>
        <Button x:Name="Zad5" Content="Задание 5" Click="Zad5_Click"/>
    </StackPanel>
</Window>
