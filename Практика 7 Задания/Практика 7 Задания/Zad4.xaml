<Window x:Class="Практика_7_Задания.Zad4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практика_7_Задания"
        mc:Ignorable="d"
        Title="Zad4" Height="300" Width="400">
    <StackPanel>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Файл"/>
            <MenuItem Header="Правка"/>
            <MenuItem Header="Вид"/>
        </Menu>
        <ListBox Height="140" >
            <ListBoxItem Margin="3" Content="MS SQL Server"/>
            <ListBoxItem Margin="3" Content="MySQL"/>
            <ListBoxItem Margin="3" Content="Oracle"/>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Копировать"></MenuItem>
                    <MenuItem Header="Вставить"></MenuItem>
                    <MenuItem Header="Вырезать"></MenuItem>
                    <MenuItem Header="Удалить"></MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </StackPanel>
</Window>
